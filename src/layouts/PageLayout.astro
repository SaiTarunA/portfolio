---
import "@fontsource/ibm-plex-sans-condensed/100.css";
import "@fontsource/ibm-plex-sans-condensed/200.css";
import "@fontsource/ibm-plex-sans-condensed/300.css";
import "@fontsource/ibm-plex-sans-condensed/400.css";
import "@fontsource/ibm-plex-sans-condensed/500.css";
import "@fontsource/ibm-plex-sans-condensed/600.css";
import "@fontsource/ibm-plex-sans-condensed/700.css";
import "@fontsource/just-another-hand";
import "@fontsource-variable/bricolage-grotesque";
import "@fontsource/ibm-plex-mono";
import "../styles/global.css";
import SidebarLayout from "./Sidebar/sidebar-layout";

type Props = {
  title: string;
  description: string;
};
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <meta name="generator" content={Astro.generator} /> -->
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <SidebarLayout client:load>
      <slot />
    </SidebarLayout>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>


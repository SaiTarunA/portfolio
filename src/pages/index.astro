---
import Introduction from "@/components/Home/Introduction.astro";
import PageLayout from "../layouts/PageLayout.astro";
import config from "../lib/config";
import Experience from "@/components/Home/Experience.astro";
import Skills from "@/components/Home/Skills.astro";
import Contact from "@/components/Home/Contact.astro";
---

<PageLayout
  title={config.pages.index.title}
  description={config.pages.index.description}
>
  <Introduction />
  <Experience />
  <Skills />
  <Contact />
</PageLayout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.utils.toArray(".fade-up").forEach((el) => {
    gsap.from(el as Element, {
      y: 30,
      opacity: 0,
      duration: 0.5,
      ease: "power2.out",

      scrollTrigger: {
        trigger: el as Element,
        start: "top 98%",
        toggleActions: "play none none reverse",
      },
    });
  });
</script>
